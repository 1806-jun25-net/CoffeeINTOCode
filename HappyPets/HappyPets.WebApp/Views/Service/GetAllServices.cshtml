@{
    ViewData["Title"] = "Home Page";
}

<!-- Main Content -->
<!-- TODO check responsive on mobile, After fix footer section -->
<main class="row">
    <section class="col-4">
        <div class="row col-12 my-3">
            <h2>Find Services</h2>
            <form class="form-inline HP-SearchForm" action="">
                <input class="HP-SearchForm_input text-right" type="search" placeholder="Search" aria-label="Search">
                <button class="HP-SearchForm_button justify-content-end" type="submit">
                    <i class="fa fa-search text-primary">&nbsp;</i>
                </button>
            </form>
        </div>
        <div class="row col-12 my-3">
            <p>
                Order By Price:
                <span>
                    <select>
                        <option>Low Price </option>
                        <option>Hight Price </option>
                    </select>
                </span>
            </p>
            <p>
                Order By Pet Type:
                <span>
                    <select>
                        <option>Cat</option>
                        <option>Dog</option>
                    </select>
                </span>
            </p>
        </div>
    </section>
    <section class="col-8">
        <section class="my-3">
            <div class="row col-12">
                <h2>Services</h2>
            </div>
        </section>
        <section class="row my-3">
            @foreach( var item in Model)
            {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                <div class="card">
                    <img class="card-img-top" src="http://via.placeholder.com/240" alt="Third slide">
                    <div class="card-body">
                        <h5 class="card-title">@item.ServiceNames</h5>
                        <p class="card-text text-secondary">$@item.ServicePrice</p>
                        <a asp-controller="Order" asp-action="GetServiceDetails" asp-route-id="@item.ServiceId" class="btn btn-primary">View More</a>
                    </div>
                </div>
            </div>

            }
            
        </section>
    </section>

</main>
<!-- End Main Content --