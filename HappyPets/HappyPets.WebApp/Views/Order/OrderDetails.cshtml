<!-- Main Content -->
<main class="row">

    <h2>Order Number: <span style="{color:red}">12345</span></h2>
    <p>Total: $13.00</p>
    <p>Order Issued: 02/04/2018</p>
    <p>Services Appointment: 04/04/2018</p>

    <table class="table table-striped table-hover my-4">
        <thead>
            <tr>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.itemName</td>
                    <td>@c.itemPrice</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Total: $13.00</p>
    <a asp-controller="Home" asp-action="Index">Continue Shopping</a>

</main>
