@model HappyPets.WebApp.Models.Cart

@{
    ViewData["Title"] = "Home Page";

    Cart [] cartList = {
new Cart { ItemTotalCost = (decimal) 11.00, ItemType = false},
new Cart { ItemTotalCost = (decimal) 22.00, ItemType = true},
new Cart { ItemTotalCost = (decimal) 33.00, ItemType = true},
new Cart { ItemTotalCost = (decimal) 44.00, ItemType = false},
new Cart { ItemTotalCost = (decimal) 55.00, ItemType = false},
new Cart { ItemTotalCost = (decimal) 66.00, ItemType = false},
};
}


<!-- Main Content -->
<main class="row">
    <section class="col-12 col-md-8 my-3">
        <h2>Services</h2>

        <table class="table table-striped table-hover my-4">
            <thead>
                <tr>
                    <th scope="col">Services name</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in cartList)
                {
                    @if (c.ItemType == false)
                    {
                        <tr>
                            <td>@c.ItemType <p><small class="text-primary">detele</small></p></td>
                            <td>@c.ItemTotalCost</td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <h2>Proudcts</h2>
        <table class="table table-striped table-responsive-sm table-hover my-4">
            <thead>
                <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in cartList)
                {
                    @if (c.ItemType == true)
                    {
                        <tr>
                            <td>@c.ItemType <p><small class="text-primary">detele</small></p></td>
                            <td>@c.ItemTotalCost</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <button  onclick="window.location.href='Options'" class="btn btn-outline-primary my-r d-none d-md-block"> 
                Proceed to Checkout     
        </button>
    </section>
    <section class="col-12 col-md-4 my-3">
        <button onclick="window.location.href='Options'" class="btn btn-outline-primary btn-lg"> Proceed to Checkout</button>
    </section>
</main>
