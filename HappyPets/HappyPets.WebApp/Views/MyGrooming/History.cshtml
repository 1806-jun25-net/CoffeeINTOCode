 @model HappyPets.WebApp.Models.OrderDetailsRating
@{
    ViewData["Title"] = "Cart";
}
<!-- Main Content -->
<main class="row">
    <section class="col-12 col-md-4 my-3">
        <h2>Dashboard</h2>
    </section>
    <section class="col-12 col-md-8 my-3">
        <h2>Order History</h2>
        <table class="table table-striped table-hover my-4">
            <thead>
                <tr>
                    <th scope="col">Order ID</th>
                  
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.OrderIDList) 
                {
                    <tr>
                        <td>@c</td>
                        
                        <td>
                           <form asp-controller="MyGroomming" action="OrderDetailsRating" method="post">

                            <button type="button">View</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

</main>
<!-- End Main Content -->