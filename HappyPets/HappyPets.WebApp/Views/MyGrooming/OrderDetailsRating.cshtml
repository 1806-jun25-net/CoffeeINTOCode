<!-- Main Content -->
<main class="row my-4">
    <div class="container-fluid">
        <h2>Order Number: <span style="color:red;">12345</span></h2>
        <p>Total: $13.00</>
        <p>Order Issued: 02/04/2018</p>
        @* TODO show if  user have a services*@
        <p>Services Appointment: 04/04/2018</p>
        <p>Your Groomer: Juan Rodriguez</p>
        <p>Your services Rating: <span>5</span> Starts <button id="EditRating" type="button">edit</button></p>

        <form style="display:none" id="selectedRating" asp-controller="" asp-action=" method="post">
            <label>Rate your Employee</label>
            @Html.DropDownList("selectedRating",
                     new List<SelectListItem>
                     {
            new SelectListItem() { Text = "1", Value = "1"},
            new SelectListItem() { Text = "2", Value = "2"},
            new SelectListItem() { Text = "3", Value = "3"},
            new SelectListItem() { Text = "4", Value = "4"},
            new SelectListItem() { Text = "5", Value = "5" }
                         })
            <input hidden name="selectedEmplooye" value="" />
            <button id="SubmitRating" type="submit">Submit Rating</button>
        </form>

    </div>
    <div class="container-fluid my-4">
        <form asp-controller="Order" asp-action="PlaceOrder">
            <button type="submit" class="btn btn-outline-primary btn-lg">Confirm Order</button>
        </form>
        <table class="table table-striped table-hover my-4">
            <thead>
                <tr>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @*@foreach (var c in Model)*@
                @for (int i = 0; i < 10; i++)
                {
                    <tr>
                        <td>c.itemName</td>
                        <td>c.itemPrice</td>
                    </tr>
                }
            </tbody>
        </table>

        <p>Total: $13.00</p>
        <form asp-controller="Order" asp-action="PlaceOrder">
            <button type="submit" class="btn btn-outline-primary btn-lg">Confirm Order</button>
        </form>
    </div>
</main>

<script>(function() {
        var showRating = document.getElementById("EditRating");
        var selectedRating = document.getElementById("selectedRating");
        var clicked = undefined;
        var SubmitRating = document.getElementById("SubmitRating");


        showRating.addEventListener("click", () => {
            if (clicked == undefined || clicked == true) {
                selectedRating.style.display = "";
                showRating.innerText = "hide";
                clicked = false;
            }
            else {
                selectedRating.style.display = "none";
                showRating.innerText = "Edit";
                clicked = true;
            }
        });

        SubmitRating.addEventListener("click", () => {
            selectedRating.style.display = "none";
            showRating.innerText = "Edit";
            clicked = true;
        })

})();</script>
